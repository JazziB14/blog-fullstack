erDiagram
    USERS {
        integer id PK
        string username
        string email
        string password
        string created_at
    }

    POSTS {
        integer id PK
        integer user_id FK
        string title
        text content
        string created_at
    }

    COMMENTS {
        integer id PK
        integer user_id FK
        integer post_id FK
        text comment
        string created_at
    }

    CATEGORIES {
        integer id PK
        string name
        string created_at
    }

    POSTS_CATEGORIES {
        integer post_id FK
        integer category_id FK
    }

    USERS ||--o{ POSTS : "creates"
    USERS ||--o{ COMMENTS : "writes"
    POSTS ||--o{ COMMENTS : "has"
    POSTS ||--o{ POSTS_CATEGORIES : "belongs to"
    CATEGORIES ||--o{ POSTS_CATEGORIES : "contains"